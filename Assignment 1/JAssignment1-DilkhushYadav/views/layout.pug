doctype html
html
    head
        // Page title with dynamic variable
        title Admin Panel - #{title}  

        // Meta tags for character encoding and responsive design
        meta(charset="UTF-8")  
        meta(name="viewport" content="width=device-width, initial-scale=1")  

        // Bootstrap CSS for styling
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")  

        // Custom CSS file for additional styles
        link(rel="stylesheet" href="/css/style.css")  

    body
        // Navigation bar (Bootstrap navbar)
        nav.navbar.navbar-expand-lg  
            .container-fluid
                // Dashboard link in the navbar
                a.navbar-brand(href="/admin") Dashboard  

                // Navbar toggle button for mobile view
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")  
                    span.navbar-toggler-icon  

                // Navbar links
                #navbarNav.collapse.navbar-collapse  
                    ul.navbar-nav
                        li.nav-item
                            // Link to add a new project
                            a.nav-link(href="/admin/projects/add") Add Project  
                        li.nav-item
                            // Link to add a new skill
                            a.nav-link(href="/admin/skills/add") Add Skill  

        // Main container for page content
        .container-fluid
            .row
                // Sidebar for profile info (left side)
                .col-lg-2.col-md-3.col-sm-4.aside  
                    .img-block.text-center
                        // Profile picture
                        img(src="/images/profile.jpg" alt="Profile Picture" class="img-fluid rounded-circle" width="200")  

                    .aside-content 
                        // Email section
                        p.aside-item
                            strong Email:  
                            span: a(href="mailto:dilkhushyadav@gmail.com") dilkhushyadav@gmail.com  

                        // Website section
                        p.aside-item
                            strong Website:  
                            span: a(href="https://dilkhushyadav.com/" target="_blank") https://dilkhushyadav.com  

                        // GitHub profile link
                        p.aside-item
                            strong Git:  
                            span: a(href="https://github.com/dilkhush727" target="_blank") https://github.com/dilkhush727  

                // Main content area (right side)
                .col-lg-9.col-md-9.col-sm-8.pt-4  
                    block content  // This block will be extended in other templates

        // Bootstrap JS for interactive components
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")  
